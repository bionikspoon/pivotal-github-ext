{
  "name": "Pivotal Github Integration",
  "manifest_version": 2,
  "homepage_url": "https://manuphatak.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": ["storage", "https://github.com/*"],
  "content_security_policy":
    "script-src 'self' https://localhost:8080; object-src 'self'; connect-src 'self' https://localhost:8080 wss://localhost:8080 https://www.pivotaltracker.com",
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["inject.js"]
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "options_ui": { "page": "options.html", "chrome_style": true },

  "externally_connectable": {
    "matches": ["https://github.com/*"]
  }
}
